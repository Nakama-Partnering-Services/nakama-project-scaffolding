	<!-- STANDARD RULES -->
	<rule ref="category/apex/bestpractices.xml">
		<exclude name="ApexAssertionsShouldIncludeMessage" /> <!-- Not enforce, sometimes it is controversial and redundant -->
	</rule>
	<rule ref="category/apex/codestyle.xml" />
	<rule ref="category/apex/design.xml" />
	<rule ref="category/apex/performance.xml">
		<exclude name="AvoidDebugStatements" /> <!-- We have smarter rule below -->
	</rule>
	<rule ref="category/apex/security.xml">
		<priority>1</priority>
	</rule>
	<rule ref="category/apex/documentation.xml">
		<exclude name="ApexDoc" />
	</rule>

	<!-- CUSTOM APEX RULES -->

	<rule name="AvoidProductionDebugLogs" language="apex" message="Avoid leaving System.debug() statments in code as they negatively influence performance." class="net.sourceforge.pmd.lang.apex.rule.ApexXPathRule">
		<priority>3</priority>
		<properties>
			<property name="xpath">
				<value>
					<![CDATA[
                        //MethodCallExpression[@FullMethodName='System.debug'][count(*)=2]
                    ]]>
				</value>
			</property>
		</properties>
	</rule>


